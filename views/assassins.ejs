<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <title>PVSS Senior Assassins</title>
    <style>
        * {
            font-family: 'Roboto', sans-serif;
            box-sizing: border-box;
        }

        html,
        body {
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
            background-color: #f9f9f9;
        }

        .team-box {
            width: 300px;
            height: 120px;
            background-color: white;
            margin: 20px;
            box-shadow: 1px 2px 2px rgba(40, 40, 120, 0.2);
            border-radius: 4px;
            overflow: hidden;
        }

        .box-section {
            width: 100%;
            height: 50%;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            padding-left: 10px;
            padding-top: 10px;
            letter-spacing: 1px;
            padding-right: 20px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .box-top {
            height: 50%;
            border-left: 10px solid #002d9a;
            font-weight: 500;
        }

        .box-top::before {
            content: "Assassins";
            display: block;
            position: absolute;
            top: 5px;
            left: 5px;
            font-size: 12px;
            font-weight: 300;
            color: rgba(120, 120, 120)
        }
        .box-assassinated {
            background-color: rgba(219, 96, 80, 0.808) !important;
            border-left: 0 !important;
        }
        .box-assassinated::after {
            content: "\2715";
            display: block;
            font-size: 40px;
            color: rgba(82, 15, 15, 0.5);
            position: absolute;
            top: calc(50% - 7px);
            left: 50%;
            transform: translate(-50%, -50%) scale(17, 4);
        }

        .box-bottom {
            height: 50%;
            border-left: 10px solid #006ebc;
            background-color: rgba(240, 240, 240, 0.8);
            color: rgba(30, 30, 50, 0.6);
        }

        .box-bottom::before {
            content: "Targets";
            display: block;
            position: absolute;
            top: 5px;
            left: 5px;
            font-size: 12px;
            font-weight: 300;
            color: rgba(120, 120, 120)
        }
        .team-columns {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }
    </style>
</head>

<body>
    <!-- <div class="team-columns-container">
        
    </div> -->
    <div class="team-columns">
        
        <% let has_been_used = true %>
        <% let counter = 0 %>
        <% while (has_been_used) { %>
            <% has_been_used = false %>
            <div class="team-column">
                <%groups.forEach(group => { %>
                    <% if (group.targetIds[counter]) { %>
                        <% has_been_used = true %>
                        <% let team = findTeamById(teams, group.teamId) %>
                        <% let target = findTeamById(teams, group.targetIds[counter]) %>
                        <div class="team-box">
                            <div class="box-top box-section <%=team.assassinated ? 'box-assassinated' : ''%>">
                                <div class="team-text">
                                    <%=team.players.join(" & ")%>
                                </div>
                                <div class="id-text">
                                    <%=team.id%>
                                </div>

                            </div>
                            <div class="box-bottom box-section <%=target.assassinated ? 'box-assassinated' : ''%>">
                                <div class="team-text">
                                    <%=target.players.join(" & ")%>
                                </div>
                                <div class="id-text">
                                    <%=target.id%>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
                <% counter++ %>
            </div>
            <% } %>
    </div>

</body>

</html>